<div class="container p4">
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-bady">
                    <form action="" method="post">
                        <div class="form-group">
                            <label for="">Registrar Producto</label>
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="text" name="nom_producto" id="" placeholder="Nombre Producto">
                        </div>
                        <div class="form-group">
                            <input class="form-control" type="text" name="cantidad" id="" placeholder="Cantidad">
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-success btn-block">Enviar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h1>Tienda</h1>
                <table class="table">
                    <thead>
                        <tr>
                        <th scope="col">Id</th>
                        <th scope="col">Nombre Producto</th>
                        <th scope="col">Cantidad</th>
                        <th scope="col">#</th>
                        </tr>
                    </thead>
                        <tbody>
                            {{#each prod}}
                            <tr>
                            <th scope="row">{{id_producto}}</th>
                            <td>{{nom_producto}}</td>
                            <td>{{cantidad}}</td>
                            <td></td>
                            <td>
                                <a href="editar/{{id_producto}}" class="btn btn-info">Modificar</a>
                                <a href="delete/{{id_producto}}" class="btn btn-danger">Eliminar</a>
                            </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
            </div>
        </div>
    </div>
</div>